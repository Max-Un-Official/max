<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\icon.ico</ApplicationIcon>
    <StartupObject>NetflixUnOfficial.App</StartupObject>
    <Description>Unofficial Netflix app made by Rao Hammas Hussain| +92 3068513103 | Pakistan</Description>
    <RepositoryUrl>https://github.com/RaoHammas/Netflix</RepositoryUrl>
    <PackageTags>Netflix</PackageTags>
    <PackageProjectUrl>https://github.com/RaoHammas/Netflix</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\NetflixAnimation.gif" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\NetflixAnimation.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.902.49" />
    <PackageReference Include="ModernWpfUI" Version="0.9.4" />
    <PackageReference Include="WpfAnimatedGif" Version="2.0.0" />
  </ItemGroup>

</Project>
